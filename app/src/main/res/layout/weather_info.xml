<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222341"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:background="#222341"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city"/>
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#222341"/>
        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>
        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:foregroundGravity="center"
            android:src="@drawable/title_update"/>
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share"/>
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/parent_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:scrollbars="none"
        android:background="#b1b1be">

        <LinearLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/title"
                android:background="@drawable/newbackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/weather_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:ignore="WebViewLayout">

                    <LinearLayout
                        android:id="@+id/wendu_Title"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nowWendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:text="15℃"
                            android:textColor="@android:color/white"
                            android:textSize="40.9sp" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:singleLine="true"
                            android:text=" | 北京"
                            android:textColor="@android:color/white"
                            android:textSize="12dp"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/wendu_Title"
                        android:layout_marginLeft="15.0dip"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="今天18:25发布"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/time"
                        android:layout_marginLeft="15dip"
                        android:singleLine="true"
                        android:text="湿度:57%"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:id="@+id/pm2_5_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="6dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="6dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/pm2_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="PM2.5"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/pm_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="220"
                                    android:textColor="@android:color/white"
                                    android:textSize="30sp"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/pm2_5_img"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/biz_plugin_weather_0_50"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/pm2_5_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="重度污染"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/weather_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/humidity"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/weather_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/biz_plugin_weather_qing"/>

                        <TextView
                            android:id="@+id/week_tody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/weather_img"
                            android:singleLine="true"
                            android:text="今天 星期三"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/week_tody"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@id/weather_img"
                            android:singleLine="true"
                            android:text="-2°C~-7°C"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/climate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/temperature"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/weather_img"
                            android:singleLine="true"
                            android:text="多云转晴"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/climate"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/weather_img"
                            android:singleLine="true"
                            android:text="微风"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp">
                        <com.ant.liao.GifView
                            android:id="@+id/wvAirBall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="50dp"
                            android:enabled="false"/>
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:paddingRight="15dp"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_today"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:text="12/09"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical" />

                    <RelativeLayout
                        android:id="@+id/rl_layout_today"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_date_today">

                        <TextView
                            android:id="@+id/rl_tv_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今天"
                            android:textSize="16dp"
                            android:textColor="#585858"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/rl_tv_todayTypeAndFenli"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="晴 | 重度"
                            android:textSize="12dp"
                            android:layout_below="@id/rl_tv_today" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/rl_iv_todayType"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/biz_fan_weather_qing"
                        android:layout_toRightOf="@id/rl_layout_today"/>

                    <TextView
                        android:id="@+id/rl_tv_todayLowToHight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-2℃~-7℃"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                ///分割线
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de"
                    android:layout_marginLeft="75dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_yestoday"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:text="12/10"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_yestoday"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_date_yestoday">

                        <TextView
                            android:id="@+id/rl_tv_yestoday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="明天"
                            android:textSize="16dp"
                            android:textColor="#585858"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/rl_tv_yestodayTypeAndFenli"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="晴 | 重度"
                            android:textSize="12dp"
                            android:layout_below="@id/rl_tv_yestoday" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/rl_iv_yesdayType"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/biz_fan_weather_qing"
                        android:layout_toRightOf="@id/rl_layout_yestoday"/>

                    <TextView
                        android:id="@+id/rl_tv_yesdayLowToHight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-2℃~-7℃"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                ///分割线
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de"
                    android:layout_marginLeft="75dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_day3"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:text="12/11"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_day3"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_date_day3">

                        <TextView
                            android:id="@+id/rl_tv_day3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星期六"
                            android:textSize="16dp"
                            android:textColor="#585858"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/rl_tv_day3TypeAndFenli"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="晴转多云 | 重度"
                            android:textSize="12dp"
                            android:layout_below="@id/rl_tv_day3" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/rl_iv_day3Type"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/biz_fan_weather_qing"
                        android:layout_toRightOf="@id/rl_layout_day3"/>

                    <TextView
                        android:id="@+id/rl_tv_day3LowToHight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-12℃~-11℃"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                ///分割线
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de"
                    android:layout_marginLeft="75dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_day4"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:text="12/12"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_day4"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_date_day4">

                        <TextView
                            android:id="@+id/rl_tv_day4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星期天"
                            android:textSize="16dp"
                            android:textColor="#585858"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/rl_tv_day4TypeAndFenli"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="晴 | 重度"
                            android:textSize="12dp"
                            android:layout_below="@id/rl_tv_day4" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/rl_iv_day4Type"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/biz_fan_weather_qing"
                        android:layout_toRightOf="@id/rl_layout_day4"/>

                    <TextView
                        android:id="@+id/rl_tv_day4LowToHight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-2℃~7℃"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                ///分割线
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de"
                    android:layout_marginLeft="75dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_day5"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        android:text="12/13"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_day5"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_date_day5">

                        <TextView
                            android:id="@+id/rl_tv_day5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星期一"
                            android:textSize="16dp"
                            android:textColor="#585858"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/rl_tv_day5TypeAndFenli"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="晴 | 重度"
                            android:textSize="12dp"
                            android:layout_below="@id/rl_tv_day5" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/rl_iv_day5Type"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/biz_fan_weather_qing"
                        android:layout_toRightOf="@id/rl_layout_day5"/>

                    <TextView
                        android:id="@+id/rl_tv_day5LowToHight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-2℃~-7℃"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            //建议view
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="出行建议"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"/>

                //fenge
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:id="@+id/iv_umbrella"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/umbrella"
                            android:layout_alignParentLeft="true"/>

                        <RelativeLayout
                            android:id="@+id/rl_layout_umbrella"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_umbrella"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/rl_tv_umbrella"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="不用带伞"
                                android:textSize="16dp"
                                android:textColor="#434343"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/rl_tv_umbrellaDetail"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="天公作美，今天你想在哪里过？"
                                android:singleLine="true"
                                android:textSize="12dp"
                                android:textColor="#afafaf"
                                android:layout_below="@id/rl_tv_umbrella" />

                            <ImageView
                                android:id="@+id/rl_btn_umbrella"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:src="@drawable/right"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.01dp"
                        android:background="#b3b5de" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:id="@+id/iv_cloth"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/cloth"
                            android:layout_alignParentLeft="true"/>

                        <RelativeLayout
                            android:id="@+id/rl_layout_cloth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_cloth"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/rl_tv_cloth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="适宜棉衣"
                                android:textSize="16dp"
                                android:textColor="#434343"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/rl_tv_clothDetail"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="天气转冷，注意保暖"
                                android:singleLine="true"
                                android:textSize="12dp"
                                android:textColor="#afafaf"
                                android:layout_below="@id/rl_tv_cloth" />

                            <ImageView
                                android:id="@+id/rl_btn_cloth"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:src="@drawable/right"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.01dp"
                        android:background="#b3b5de" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:id="@+id/iv_spf"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/spf"
                            android:layout_alignParentLeft="true"/>

                        <RelativeLayout
                            android:id="@+id/rl_layout_outside"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_spf"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/rl_tv_spf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无需防晒"
                                android:textSize="16dp"
                                android:textColor="#434343"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/rl_tv_spfDetail"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="@string/spyDetail"
                                android:singleLine="true"
                                android:textSize="12dp"
                                android:textColor="#afafaf"
                                android:layout_below="@id/rl_tv_spf" />

                            <ImageView
                                android:id="@+id/rl_btn_spf"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:src="@drawable/right"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="运动建议"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"/>


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@+id/iv_morningSporting"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/chenlian"
                        android:layout_alignParentLeft="true"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_chenlian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_morningSporting"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/rl_tv_chenlian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="适宜晨练"
                            android:textSize="16dp"
                            android:textColor="#434343"
                            android:layout_marginTop="21dp" />

                        <TextView
                            android:id="@+id/rl_tv_chenlianDetail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="天气不错，空气清新，是您晨练的大好时机"
                            android:singleLine="true"
                            android:textSize="12dp"
                            android:textColor="#afafaf"
                            android:layout_below="@id/rl_tv_chenlian" />

                        <ImageView
                            android:id="@+id/rl_btn_chenlian"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:src="@drawable/right"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="洗车建议"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"/>

                //fenge
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#b3b5de" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@+id/iv_car"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/car"
                        android:layout_alignParentLeft="true"/>

                    <RelativeLayout
                        android:id="@+id/rl_layout_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_car"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/rl_tv_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不宜洗车"
                            android:textSize="16dp"
                            android:textColor="#434343"
                            android:layout_marginTop="21dp" />

                        <TextView
                            android:id="@+id/rl_tv_carDetail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="降水、大风或者沙尘可能会再次弄脏爱车哦！"
                            android:singleLine="true"
                            android:textSize="12dp"
                            android:textColor="#afafaf"
                            android:layout_below="@id/rl_tv_car" />

                        <ImageView
                            android:id="@+id/rl_btn_car"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:src="@drawable/right"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            //foot
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="中国天气     ☀ 佳洁天气"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
